---
const links = [
  { href: '#inicio', label: 'Inicio' },
  { href: '#servicios', label: 'Servicios' },
  { href: '#proyectos', label: 'Proyectos' },
  { href: '#nosotros', label: 'Nosotros' },
  { href: '#contacto', label: 'Contacto' },
];
---

<nav class="navbar">
  <div class="nav-inner">
    <!-- Logo -->
    <a href="/" class="nav-logo">
      <img src="/logo.png" alt="ISOFT" />
    </a>

    <!-- Botón hamburguesa (solo mobile) -->
    <button class="nav-toggle" aria-label="Abrir menú" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <!-- Links -->
    <ul class="nav-links">
      {links.map((link) => (
        <li>
          <a href={link.href}>{link.label}</a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  .navbar {
    position: sticky;
    top: 0;
    z-index: 50;
    /* siempre transparente */
    background: transparent !important;
    backdrop-filter: none !important;
    box-shadow: none !important;
    transition:
        backdrop-filter 0.18s ease,
        box-shadow 0.18s ease;
    }

  /* ESTADO CON SCROLL o MENÚ ABIERTO */
  .navbar.scrolled,
  .navbar.open {
    background: linear-gradient(
      to bottom,
      rgba(2, 6, 23, 0.92),
      rgba(2, 6, 23, 0.75),
      transparent
    ) !important;
    backdrop-filter: blur(12px) !important;
    box-shadow: 0 10px 30px rgba(15, 23, 42, 0.7) !important;
  }

  .nav-inner {
    max-width: 1120px;
    margin: 0 auto;
    padding: 0.4rem 1.2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #e5e7eb;
  }

  .nav-logo img {
    height: 64px;
    width: auto;
    object-fit: contain;
    display: block;
  }

  /* HAMBURGUESA */
  .nav-toggle {
    width: 42px;
    height: 42px;
    border-radius: 999px;
    border: 1px solid rgba(148, 163, 184, 0.6);
    background: radial-gradient(circle at 30% 30%, #38bdf8, #0f172a);
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    padding: 0;
    cursor: pointer;
  }

  .nav-toggle span {
    display: block;
    height: 2px;
    width: 20px;
    margin: 0 auto;
    border-radius: 999px;
    background: #e5e7eb;
    transition: transform 0.18s ease, opacity 0.18s ease;
  }

  /* Animación hamburguesa → X */
  .navbar.open .nav-toggle span:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }
  .navbar.open .nav-toggle span:nth-child(2) {
    opacity: 0;
  }
  .navbar.open .nav-toggle span:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* LINKS base (mobile) */
  .nav-links {
    position: fixed;
    inset: 0 0 auto auto;
    top: 64px;
    right: 0;
    width: min(260px, 80vw);
    max-height: calc(100vh - 64px);
    padding: 1rem 1.25rem 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    background: radial-gradient(circle at top left, #0f172a, #020617);
    box-shadow: -8px 14px 40px rgba(0, 0, 0, 0.6);
    border-radius: 16px 0 0 16px;
    transform: translateX(110%);
    opacity: 0;
    pointer-events: none;
    transition:
      transform 0.18s ease-out,
      opacity 0.18s ease-out;
  }

  .navbar.open .nav-links {
    transform: translateX(0);
    opacity: 1;
    pointer-events: auto;
  }

  .nav-links li {
    list-style: none;
  }

  .nav-links a {
    display: block;
    padding: 0.5rem 0.2rem;
    color: #e5e7eb;
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    border-radius: 999px;
    transition: color 0.15s ease, background 0.15s ease, transform 0.1s ease;
  }

  .nav-links a:hover {
    background: rgba(59, 130, 246, 0.18);
    color: #bfdbfe;
    transform: translateX(2px);
  }

  /* DESKTOP */
  @media (min-width: 768px) {
    .nav-inner {
      padding-inline: 2rem;
    }

    .nav-toggle {
      display: none;
    }

    .nav-links {
      position: static;
      flex-direction: row;
      gap: 1.75rem;
      background: transparent;
      box-shadow: none;
      border-radius: 0;
      padding: 0;
      max-height: none;
      width: auto;
      transform: none;
      opacity: 1;
      pointer-events: auto;
    }

    .nav-links a {
      font-size: 0.95rem;
      padding: 0.1rem 0;
    }

    .nav-links a::after {
      content: '';
      display: block;
      height: 2px;
      margin-top: 4px;
      width: 0;
      border-radius: 999px;
      background: linear-gradient(to right, #38bdf8, #6366f1);
      transition: width 0.16s ease;
    }

    .nav-links a:hover::after {
      width: 100%;
    }
  }
</style>

<script>
// @ts-nocheck
  (function () {
    const nav = document.querySelector('.navbar');
    if (!nav) return;

    const toggle = nav.querySelector('.nav-toggle');
    const links = nav.querySelector('.nav-links');

    if (!toggle || !links) return;

    // Menú hamburguesa
    toggle.addEventListener('click', () => {
      const isOpen = nav.classList.toggle('open');
      toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
    });

    // Cerrar menú al hacer click en un link
    links.querySelectorAll('a').forEach((a) => {
      a.addEventListener('click', () => {
        nav.classList.remove('open');
        toggle.setAttribute('aria-expanded', 'false');
      });
    });

    // Scroll effect
    function updateScrollState() {
      const shouldBeScrolled = window.scrollY > 20; // umbral suave
      if (shouldBeScrolled) {
        nav.classList.add('scrolled');
      } else {
        nav.classList.remove('scrolled');
      }
    }

    // Estado inicial
    updateScrollState();

    // Actualizar en cada scroll
    window.addEventListener('scroll', updateScrollState);
  })();
</script>