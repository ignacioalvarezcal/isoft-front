---
import { ArrowRight } from "lucide-astro";
import { Icon } from "astro-icon/components";
import "./hero.scss";
---

<section class="hero">
  <div class="hero__bg">
    <div
      class="hero__blob hero__blob--left"
      data-parallax
      data-speed="0.3"
    ></div>
    <div
      class="hero__blob hero__blob--right"
      data-parallax
      data-speed="0.5"
    ></div>
    <div class="hero__overlay"></div>
  </div>

  <div class="hero__content">
    <div class="hero__pill">
      Consultoría Tecnológica
    </div>

    <h1 class="hero__title-main">
      <span class="text-gradient glow-text">ISOFT</span>
    </h1>

    <p class="hero__subtitle-top">
      Soluciones Tecnológicas a Medida
    </p>
    <p class="hero__subtitle-main text-gradient">
      Juntos impulsemos tu Negocio
    </p>

    <p class="hero__description">
      Expertos en transformación digital y automatización de procesos,
      inteligencia artificial y arquitecturas empresariales con enfoque en la mejora continua.
    </p>
    <div class="hero__tech-carousel">
      <div class="hero__tech-track">
        <div class="hero__tech-icon"><Icon name="simple-icons:python" /></div>
        <div class="hero__tech-icon"><Icon name="simple-icons:openjdk" /></div>
        <div class="hero__tech-icon"><Icon name="simple-icons:angular" /></div>
        <div class="hero__tech-icon"><Icon name="simple-icons:react" /></div>
        <div class="hero__tech-icon"><Icon name="simple-icons:nodedotjs" /></div>
        <div class="hero__tech-icon"><Icon name="simple-icons:typescript" /></div>
        <div class="hero__tech-icon"><Icon name="simple-icons:docker" /></div>
        <div class="hero__tech-icon"><Icon name="simple-icons:postgresql" /></div>
        <div class="hero__tech-icon"><Icon name="simple-icons:mongodb" /></div>
        <div class="hero__tech-icon"><Icon name="simple-icons:git" /></div>
        
